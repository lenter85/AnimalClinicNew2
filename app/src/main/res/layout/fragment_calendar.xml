<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6FFCC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffffff"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/monthPrevious"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/left"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_marginLeft="15dp"
            android:padding="10dp" />
        <TextView
            android:id="@+id/monthText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="달력"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/monthNext"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:background="@drawable/right"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="#87df85">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="일"
            android:id="@+id/textViewContent"
            android:textColor="#ff0000"
            android:layout_weight="1"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="월"
            android:id="@+id/txtClinicId"
            android:layout_weight="1"
            android:layout_marginLeft="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="화"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="수"
            android:id="@+id/txtRdate"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="목"
            android:id="@+id/txtDow"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="금"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="토"
            android:id="@+id/textView7"
            android:textColor="#0014f0"
            android:layout_weight="1"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <com.example.myapplication.calendar.CalendarMonthView
        android:id="@+id/monthView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#000000"
        android:textAlignment="center" />

</LinearLayout>
