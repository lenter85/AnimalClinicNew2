<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.diary.RegisterVaccinationFragment"
    android:background="#77c1af">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="접종명"
        android:id="@+id/textView15"
        android:layout_marginTop="89dp"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView22"
        android:layout_toEndOf="@+id/imageView22"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="접종일"
        android:id="@+id/textView16"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="다음 접종일"
        android:id="@+id/textView17"
        android:textSize="20dp"
        android:paddingTop="6dp"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/txtVname"
        android:background="@drawable/round_angle"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/txtVdate"
        android:layout_alignStart="@+id/txtVdate" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/txtVdate"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignLeft="@+id/txtVndate"
        android:layout_alignStart="@+id/txtVndate"
        android:background="@drawable/round_angle" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/txtVndate"
        android:layout_alignTop="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_marginLeft="10dp"
        android:background="@drawable/round_angle" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView11"
        android:layout_alignBottom="@+id/txtVndate"
        android:src="@drawable/calendar"
        android:layout_alignTop="@+id/txtVndate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView12"
        android:layout_alignBottom="@+id/txtVdate"
        android:src="@drawable/calendar"
        android:layout_alignTop="@+id/txtVdate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        android:id="@+id/btnRegisterVac"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txtVdate"
        android:layout_toStartOf="@+id/txtVdate"
        android:textSize="20dp"
        android:onClick="onClickRegisterVaccination" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:id="@+id/btnCancelVac"
        android:layout_alignTop="@+id/btnRegisterVac"
        android:layout_alignRight="@+id/txtVndate"
        android:layout_alignEnd="@+id/txtVndate"
        android:textSize="20dp"
        android:onClick="onClickCancel" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView22"
        android:src="@drawable/checkbox"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView23"
        android:src="@drawable/check"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView24"
        android:src="@drawable/check"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
