<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/round_angle"
    android:layout_margin="10dp"
    android:padding="5dp">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="애완동물 이름"
            android:id="@+id/txtPname"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="우리동네 동물병원"
            android:id="@+id/txtCname"
            android:layout_gravity="left|center_horizontal"
            android:layout_below="@+id/txtPname"
            android:layout_alignRight="@+id/txtCaddress"
            android:layout_alignEnd="@+id/txtCaddress"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울 송파구 가락동 IT 벤쳐타워"
            android:id="@+id/txtCaddress"
            android:layout_below="@+id/txtCname"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2016년 8월 11일"
                android:id="@+id/txtDate"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtCname"
                android:layout_alignStart="@+id/txtCname"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="10:00 - 11:00"
                android:id="@+id/txtTime"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtCname"
                android:layout_alignStart="@+id/txtCname"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="진료예약"
            android:id="@+id/txtRtype"
            android:textSize="20dp"
            android:textColor="#ff0d0d"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btnEdit"
            android:layout_alignEnd="@+id/btnEdit"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경"
            android:id="@+id/btnEdit"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_above="@+id/btnCancle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:id="@+id/btnCancle"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btnEdit"
            android:layout_alignStart="@+id/btnEdit" />
    </RelativeLayout>
</LinearLayout>
