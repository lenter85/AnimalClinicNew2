<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.diary.VaccinationFragment1"
    android:background="#9cb4b4">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="153dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:id="@+id/imageView9"
                android:layout_gravity="left|top"
                android:background="@drawable/checklist" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imgAddVac"
                android:onClick="onClickToRegisterVaccination"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                android:src="@android:drawable/ic_input_add" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="441dp"
            android:baselineAligned="@+id/imageView9"
            android:layout_gravity="center_horizontal|bottom">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="39dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="접종명"
                    android:id="@+id/textView20"
                    android:layout_weight="1"
                    android:textSize="19dp"
                    android:textAlignment="center"
                    android:background="@drawable/round_angle_table"
                    android:layout_margin="3dp"
                    android:padding="4dp"
                    android:autoText="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="접종일"
                    android:id="@+id/textView24"
                    android:textSize="19dp"
                    android:background="@drawable/round_angle_table"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="다음 접종일"
                    android:id="@+id/textView25"
                    android:textSize="19dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_angle_table"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:padding="4dp" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listViewVaccination" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
