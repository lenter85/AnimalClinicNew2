<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.clinic.fragment.ModifyClinicInformationFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageViewAdd"
                android:src="@drawable/add"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/imageViewSmall1"
                android:layout_alignStart="@+id/imageViewSmall1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewSmall1"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/imageViewAdd"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/add_small" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewSmall2"
                android:layout_alignTop="@+id/imageViewSmall1"
                android:layout_toRightOf="@+id/imageViewSmall1"
                android:layout_toEndOf="@+id/imageViewSmall1"
                android:layout_marginLeft="20dp"
                android:src="@drawable/add_small" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewSmall3"
                android:layout_alignBottom="@+id/imageViewSmall2"
                android:layout_toEndOf="@+id/imageViewSmall2"
                android:layout_alignTop="@+id/imageViewSmall2"
                android:layout_toRightOf="@+id/imageViewSmall2"
                android:layout_marginLeft="20dp"
                android:src="@drawable/add_small" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewSmall4"
                android:src="@drawable/add_small"
                android:layout_alignBottom="@+id/imageViewSmall3"
                android:layout_toRightOf="@+id/imageViewSmall3"
                android:layout_toEndOf="@+id/imageViewSmall3"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewSmall5"
                android:src="@drawable/add_small"
                android:layout_alignBottom="@+id/imageViewSmall4"
                android:layout_toRightOf="@+id/imageViewSmall4"
                android:layout_toEndOf="@+id/imageViewSmall4"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="병원이름 : "
                android:id="@+id/textView1"
                android:layout_below="@+id/imageViewSmall1"
                android:layout_alignLeft="@+id/imageViewSmall1"
                android:layout_alignStart="@+id/imageViewSmall1"
                android:layout_marginTop="24dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:id="@+id/editText1"
                android:layout_alignTop="@+id/textView1"
                android:layout_alignRight="@+id/imageViewSmall5"
                android:layout_alignEnd="@+id/imageViewSmall5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치 : "
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:layout_below="@+id/textView1"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignStart="@+id/textView1"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세주소 : "
                android:id="@+id/textView24"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="15dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:id="@+id/editText2"
                android:layout_toRightOf="@+id/textView1"
                android:layout_toEndOf="@+id/textView1"
                android:layout_alignTop="@+id/textView24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진료시간 : "
                android:id="@+id/textView3"
                android:layout_below="@+id/textView24"
                android:layout_alignLeft="@+id/textView24"
                android:layout_alignStart="@+id/textView24"
                android:layout_marginTop="15dp"
                android:textSize="20dp" />

            <Spinner
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/spinner1"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignLeft="@+id/editText1"
                android:layout_alignStart="@+id/editText1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:id="@+id/textView26"
                android:layout_alignTop="@+id/spinner1"
                android:layout_toRightOf="@+id/spinner1"
                android:layout_toEndOf="@+id/spinner1"
                android:layout_marginLeft="20dp"
                android:textSize="30dp"
                android:layout_marginRight="20dp" />

            <Spinner
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/spinner2"
                android:layout_alignBottom="@+id/spinner1"
                android:layout_toRightOf="@+id/textView26"
                android:layout_toEndOf="@+id/textView26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호 : "
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:id="@+id/editText4"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignLeft="@+id/spinner1"
                android:layout_alignStart="@+id/spinner1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="병원소개"
                android:id="@+id/textView19"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_below="@+id/textView19"
                android:layout_alignLeft="@+id/textView19"
                android:layout_alignStart="@+id/textView19" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/editText3">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:background="@drawable/green_round_angle"
                    android:layout_margin="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:background="@drawable/green_round_angle"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
