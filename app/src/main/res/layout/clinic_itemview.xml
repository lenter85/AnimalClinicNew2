<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/round_angle"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/imgClinic"
                android:src="@drawable/smile"
                android:scaleType="fitXY"
                android:layout_margin="5dp" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="동물병원 이름"
                android:id="@+id/txtAName"
                android:textIsSelectable="false"
                android:textSize="25dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="9dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:stepSize="0.5"
                android:rating="5"
                android:numStars="5"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/txtAddress"
                android:layout_alignStart="@+id/txtAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동물병원 주소"
                android:id="@+id/txtAddress"
                android:layout_below="@+id/ratingBar"
                android:layout_alignLeft="@+id/txtAName"
                android:layout_alignStart="@+id/txtAName" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAddress"
                android:layout_alignLeft="@+id/txtAddress"
                android:layout_alignStart="@+id/txtAddress">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리뷰"
                    android:id="@+id/textView46"
                    android:layout_below="@+id/txtAddress"
                    android:layout_alignLeft="@+id/txtAddress"
                    android:layout_alignStart="@+id/txtAddress"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:id="@+id/textView47"
                    android:layout_below="@+id/txtAddress"
                    android:layout_alignLeft="@+id/txtAddress"
                    android:layout_alignStart="@+id/txtAddress"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후기"
                    android:id="@+id/textView48"
                    android:layout_below="@+id/txtAddress"
                    android:layout_alignLeft="@+id/txtAddress"
                    android:layout_alignStart="@+id/txtAddress"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후기"
                    android:id="@+id/textView49"
                    android:layout_below="@+id/txtAddress"
                    android:layout_alignLeft="@+id/txtAddress"
                    android:layout_alignStart="@+id/txtAddress"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
