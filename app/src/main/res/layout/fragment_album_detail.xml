<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.diary.AlbumDetailFragment"
    android:background="#bee0cf">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목 :"
        android:id="@+id/albumTitle"
        android:textSize="18dp"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:id="@+id/aDetailImage"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/albumTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:id="@+id/albumDate"
        android:textSize="15dp"
        android:layout_marginRight="82dp"
        android:layout_marginEnd="82dp"
        android:layout_above="@+id/aDetailTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aDetailTitle"
        android:layout_alignTop="@+id/albumTitle"
        android:layout_toRightOf="@+id/aDetailContent"
        android:layout_toEndOf="@+id/aDetailContent"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/aDetailContent"
        android:layout_below="@+id/aDetailImage"
        android:layout_alignLeft="@+id/albumTitle"
        android:layout_alignStart="@+id/albumTitle"
        android:layout_marginTop="48dp"
        android:textSize="15dp" />

</RelativeLayout>
